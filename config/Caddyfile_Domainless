{
		# debug
		log {
				level INFO
		}
		storage file_system /home/naive/.config/caddy
		admin off
		auto_https off
		servers {
				protocol {
						experimental_http3
				}
		}
}

:1110
bind 172.17.0.1
tls /cert/cert.pem /cert/key.pem
route {
		header {
				Server nginx
				# H3? Todo
				#Alt-Svc "h3=\":443\"; ma=2592000,h3-29=\":443\"; ma=2592000,quic=\":443\"; ma=2592000"
		}
		forward_proxy {
				basic_auth user pass
				hide_ip
				hide_via
				probe_resistance
		}
		file_server {
			root /var/www/html
		}
}